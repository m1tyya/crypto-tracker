{
	"compilerOptions": {
		"allowJs": true,
		"allowUnreachableCode": false,
		"baseUrl": ".",
		"checkJs": true,
		"composite": true,
		"declaration": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": false,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "react",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"newLine": "lf",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "dist",
		"paths": {
			"~/*": ["src/*"],
			"~api/*": ["src/pages/api/*"],
			"~public/*": ["public/*"],
			"~vectors/*": ["src/assets/vectors/*"],
			"~images/*": ["src/assets/images/*"],
		},
		"plugins": [{ "name": "next" }],
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2022"
	},
	"exclude": ["**/*.cy.ts", "dist", "node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "**/*.mjs", "src/utils/colors.js"]
}
